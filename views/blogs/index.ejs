    <% layout('layouts/boilerplate') %> 
    <h1>All Blogs!!</h1>
    <% for(let blog of blogs){%> 
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" src="<%=blog.image%> " alt="image">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h3 class="card-title"><%= blog.title %> </h3>
                        <p class="card-text"><%= blog.description %> </p>
                        <p class="card-text">
                            <small class="text-muted"><%= blog.date %> </small>
                        </p>
                        <a class = "btn btn-primary" href="/blogs/<%= blog._id %> ">View Details</a>
                    </div>
                </div>
            </div>
        </div>
    <% } %>  

